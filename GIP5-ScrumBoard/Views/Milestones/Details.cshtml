@model GIP5_ScrumBoard.Models.Milestone

@{
    ViewData["Title"] = "Details";
}

<h1>Milestone Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
</div>

<hr />

<h4>Tickets</h4>
@if (Model.Tickets != null && Model.Tickets.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Discription</th>
                <th>Status</th>
                <th>Assigned To</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td>@ticket.Title</td>
                    <td>@ticket.Description</td>
                    <td>
                        @if (ticket.Status == GIP5_ScrumBoard.Enum.Status.TODO)
                        {
                            <span class="badge bg-danger">To Do</span>
                        }
                        else if (ticket.Status == GIP5_ScrumBoard.Enum.Status.InProgress)
                        {
                            <span class="badge bg-warning text-dark">In Progress</span>
                        }
                        else if (ticket.Status == GIP5_ScrumBoard.Enum.Status.Done)
                        {
                            <span class="badge bg-success">Done</span>
                        }
                    </td>
                    <td>@ticket.AssignedTo</td>
                    <td>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.TicketId" class="btn btn-sm btn-outline-primary">
                         <i class="fa-solid fa-pencil fa-fw me-1"></i>Edit
                         </a>
                        <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@ticket.TicketId" class="btn btn-sm btn-outline-danger">
                            <i class="fa-solid fa-trash fa-fw me-1"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section Scripts {
        <script>
                    $(document).ready( function () {
                $('table').DataTable({

                });
            } );
        </script>
    }
}
else
{
    <p>There are no tickets associated with this milestone yet.</p>
}

<hr />

<div class="mt-3">
    @if (User.IsInRole("Project Manager"))
    {
    <a asp-action="Edit" asp-route-id="@Model.MilestoneId" class="btn btn-warning">
            <i class="fa-solid fa-pencil fa-fw me-1"></i>Edit Milestone
        </a>
    }
    <a asp-controller="Tickets" asp-action="Create" asp-route-milestoneId="@Model.MilestoneId" class="btn btn-success">
        <i class="fa-solid fa-plus fa-fw me-1"></i>New Ticket
    </a>
    <a asp-action="DownloadTickets" asp-route-id="@Model.MilestoneId" class="btn btn-success">
        <i class="fa-solid fa-download fa-fw me-1"></i>Download tickets CSV
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-house fa-fw me-1"></i>Back to Milestones
    </a>
</div>
